<% if user_signed_in? %>
  <div class="search_form">
    <%= form_with url: search_path, local: true,class: 'search_form', method: :get do |f| %>
      <%= f.text_field :word %><!--検索内容を,wordとしてアクションに送っている-->
      <%= f.select :range, options_for_select([['User'], ['Book']]) %><!--検索できるモデルを設定し,選択したモデルをrangeとしてアクションに送る-->
      <!--%= f.select :model, options_for_select({ "User" => "user", "Book" => "book" }) % この書き方でもok-->
      <%= f.select :search, options_for_select([["完全一致","perfect_match"], ["前方一致","forward_match"],  ["後方一致","backward_match"], ["部分一致","partial_match"]]) %>
      <!--%= f.select :method, options_for_select({ "完全一致" => "perfect", "前方一致" => "forward", "後方一致" => "backward", "部分一致" => "partial" }) % この書き方でもok-->
      <%= f.submit "検索", class: "btn btn-primary" %>
    <% end %>
  </div>
<% end %>